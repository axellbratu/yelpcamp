<% layout('layouts/boilerplate') %>
<div class="row">
<form action="/campgrounds/<%=campground._id%>?_method=PUT" method="post" novalidate class="validated-form">
    <div class="mb-3">
        <label for="title" class="form-label">Title</label>
            <input type="text" name="campground[title]" id="title" class="form-control" value="<%=campground.title%>"  required>
            <div class="valid-feedback">Good Soup</div>
    </div>
    <div class="mb-3">
        <label for="title" class="form-label">Location</label>
            <input type="text" name="campground[location]" id="location" class="form-control" value="<%=campground.location%>" required>

    </div>

    <div class="mb-3">
        <label for="image" class="form-label">Image Url</label>
            <input type="text" name="campground[image]" id="image" class="form-control" value="<%=campground.image%>" required>
            <div class="valid-feedback">Good Soup</div>
    </div>

    <div class="mb-3">
        <label for="price" class="form-label">Price</label>
        <div class="input-group">
            <span class="input-group-text">$</span>
            <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)" id="price" name="campground[price]" value="<%=campground.price%>" required>
            <div class="valid-feedback">Good Soup</div>
          </div>
    </div>
    <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea type="textarea" name="campground[description]" id="description" class="form-control" required><%=campground.description%></textarea>
        <div class="valid-feedback">Good Soup</div>
    </div>

    <div class="mb-3">
    <button type="submit" class="btn btn-info my-3">Save Changes</button>
    </div>
</form>
</div>
        <a href="/campgrounds/<%=campground._id%>">back campground</a>

