<% layout('layouts/boilerplate') %> 
<div class="row">
    <h1 class="text-center">
        New Campground
    </h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds" method="post" novalidate class="validated-form">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                    <input type="text" name="campground[title]" id="title" class="form-control" required>
                    <div class="valid-feedback">Good Soup</div>
            </div>
            <div class="mb-3">
                <label for="title" class="form-label">Location</label>
                    <input type="text" name="campground[location]" id="location" class="form-control" required>
                    <div class="valid-feedback">Good Soup</div>
    
            </div>

            <div class="mb-3">
                <label for="image" class="form-label">Image Url</label>
                    <input type="text" name="campground[image]" id="image" class="form-control" required>
                    <div class="valid-feedback">Good Soup</div>
    
            </div>

            <div class="mb-3">
                <label for="price" class="form-label">Price</label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)" id="price" name="campground[price]" required>
                    <div class="valid-feedback">Good Soup</div>
                  </div>
                  

            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea type="textarea" name="campground[description]" id="description" class="form-control" required></textarea>
                <div class="valid-feedback">Good Soup</div>
            </div>
            

            <div class="mb-3">
            <button type="submit" class="btn btn-success my-3">Add campground</button>
            </div>
        </form>
            <a href="/campgrounds">back to all campgrounds</a>
    </div>
</div>

